<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>New Ad</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <form method="post" action="/home/newad" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" placeholder="Name" class="form-control" name="name"/>
                </div>
                <div class="col-md-6">
                    <input type="text" placeholder="Phone Number" class="form-control" name="phonenumber"/>
                </div>
            </div>
            <br/>
            <input type="text" placeholder="Title" class="form-control" name="title"/>

            <br/>
            <textarea name="description" class="form-control" rows="10" placeholder="Description"></textarea>
            <button type="button" class="btn btn-success add-image">Add Image</button>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section scripts
{
    <script src="/Scripts/newad.js"></script>
}